@model taske2.ViewModel.PersonVM

@{
    ViewBag.Title = "PersonnalInformtion";
}

<div class="container col-md-12">
    <div class="col-md-12 mx-auto mt-5 ">
        <div style="font-family: 'Julius Sans One', sans-serif;"><h1>Personal Information</h1></div>
        <div style="font-family: 'Julius Sans One', sans-serif;"><h5>step 1 of 6</h5></div>
        <hr />

        <div class="card shadow-lg custom-bg">
            <div class="card-body p-5 ">
                @using (Html.BeginForm("AddPersonnalInformtion", "Resume", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken();


                    <div class="form-group col-9">
                        <label class="font-weight-bold" for="picture">Upload Profile Picture</label><br />
                        <div class="btn btn-primary">
                            <input type="file" name="image" accept="image/*">
                        </div>
                    </div>


                    <div class=" col-9">
                        <div class="form-row">
                            <div class="form-group col-5">
                                @Html.LabelFor(model => model.FirstName, new { @class = "font-weight-bold" })
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control  form-control-sm", @placeholder = "First Name", @required = "true" } })
                            </div>
                            <div class="form-group col-5">
                                @Html.LabelFor(model => model.LastName, new { @class = "font-weight-bold" })
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control  form-control-sm", @placeholder = "Last Name", @required = "true" } })
                            </div>
                        </div>
                    </div>


                    <div class="col-9">
                        <div class="form-row">
                            <div class="form-group col-3">
                                @Html.LabelFor(model => model.DateOfBirth, new { @class = "font-weight-bold" })
                                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @type = "date", id = "dob", @class = "form-control form-control-sm", @placeholder = "Date of Birth", @required = "true" } })
                            </div>
                            <div class="form-group col-4">
                                @Html.LabelFor(model => model.Nationality, new { @class = "font-weight-bold" })
                                @Html.DropDownListFor(model => model.Nationality, Model.ListNationality, new { id = "nation", @class = "form-control form-control-sm", @placeholder = "Select One", @required = "true" })

                            </div>
                        </div>
                    </div>


                    <div class="form-group col-3">
                        @Html.LabelFor(model => model.Tel, new { @class = "font-weight-bold" })
                        @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { id = "contact", @class = "form-control  form-control-sm", @placeholder = "Contact Number", @required = "true" } })
                    </div>

                    <div class="form-group col-3">
                        @Html.LabelFor(model => model.Email, new { @class = "font-weight-bold" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", @class = "form-control  form-control-sm", @placeholder = "Email Address", @required = "true" } })
                    </div>


                    <div class="form-group col-9">
                        @Html.LabelFor(model => model.Address, new { @class = "font-weight-bold" })
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @id = "Address", @class = "form-control form-control-sm", @placeholder = "Address", @required = "true" } })
                    </div>


                    <div class="form-group col-4">
                        @Html.LabelFor(model => model.EducationalLevel, new { @class = "font-weight-bold" })
                        @Html.DropDownListFor(model => model.EducationalLevel, Model.ListEducationalLevel, new { id = "education", @class = "form-control  form-control-sm", @placeholder = "Select One", @required = "true" })
                    </div>


                    <div class="col-9">
                        <div class="form-row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.LinkedInProdil, new { @class = "font-weight-bold" })
                                @Html.EditorFor(model => model.LinkedInProdil, new { htmlAttributes = new { type = "text", id = "LinkedIn", @class = "form-control form-control-sm ", @placeholder = "LinkedIn Account", @required = "true" } })
                            </div>

                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.FaceBookProfil, new { @class = "font-weight-bold" })
                                @Html.EditorFor(model => model.FaceBookProfil, new { htmlAttributes = new { type = "text", id = "facebook", @class = "form-control form-control-sm", @placeholder = "Facebook Account", @required = "true" } })
                            </div>
                        </div>
                    </div>


                    <div class="col-9">
                        <div class="form-row">
                            <div class="form-group col-6">
                                @Html.LabelFor(model => model.TwitterProfil, new { @class = "font-weight-bold" })
                                @Html.EditorFor(model => model.TwitterProfil, new { htmlAttributes = new { type = "text", id = "twitter", @class = "form-control  form-control-sm", @placeholder = "Twitter Account", @required = "true" } })
                            </div>
                        </div>
                    </div>


                    <div class="form-group col-9">
                        @Html.LabelFor(model => model.Summary, new { @class = "font-weight-bold" })
                        @Html.EditorFor(model => model.Summary, new { htmlAttributes = new { id = "Summary", @class = "form-control  form-control-sm", @placeholder = "Summary", @rows = "8", @cols = "30", @required = "true" } })
                    </div>

                    <div class="form-group col-9">
                        <input type="submit" value="Next Step" class="btn btn-primary float-right pr-5 pl-5">
                    </div>

                }
            </div>
        </div>

        <!--NEXT STEP BUTTON -->
        <button onclick="location.href='@Url.Action("Education", "Resume")';return false;" class="btn btn-primary mt-3 float-right px-5">Next Step</button>


    </div>
</div>





